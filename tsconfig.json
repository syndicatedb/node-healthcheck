{
  "compilerOptions": {
    "incremental": true,
    "skipLibCheck": true,
    "target": "es2018",
    "module": "commonjs",
    "lib": [                                  
      "dom",
      "es2018",
      "esnext.asynciterable"
    ],
    "allowJs": false,
    "declaration": true,                   
    "sourceMap": true,
    "outDir": "dist",
    "strict": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",               
    "rootDirs": ["src", "scripts"],                        
    "typeRoots": ["node_modules/@types"],                        
    "types": ["node"],                              
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true                   
  }
}
